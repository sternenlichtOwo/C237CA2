<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Disabled Patient</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Disabled Patients</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/viewPeople">View All</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/addPatient">Add New Patient</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-4">
    <h2 class="text-center mb-4">Add Disabled Patient</h2>

    <!-- Flash Messages -->
    <% if (messages && messages.error && messages.error.length > 0) { %>
      <div class="alert alert-danger"><%= messages.error[0] %></div>
    <% } %>
    <% if (messages && messages.success && messages.success.length > 0) { %>
      <div class="alert alert-success"><%= messages.success[0] %></div>
    <% } %>

    <!-- Form -->
    <form action="/addPatient" method="POST" class="mx-auto" style="max-width: 500px;">

      <div class="mb-3">
        <label for="full_name" class="form-label">Full Name</label>
        <input type="text" class="form-control" id="full_name" name="full_name"
               value="<%= formData ? formData.full_name : '' %>" required>
      </div>

      <div class="mb-3">
        <label for="date_of_birth" class="form-label">Date of Birth</label>
        <input type="date" class="form-control" id="date_of_birth" name="date_of_birth"
               value="<%= formData ? formData.date_of_birth : '' %>" required>
      </div>

      <div class="mb-3">
        <label for="gender" class="form-label">Gender</label>
        <select class="form-select" id="gender" name="gender" required>
          <option value="">-- Select Gender --</option>
          <option value="Male" <%= formData && formData.gender === 'Male' ? 'selected' : '' %>>Male</option>
          <option value="Female" <%= formData && formData.gender === 'Female' ? 'selected' : '' %>>Female</option>
          <option value="Other" <%= formData && formData.gender === 'Other' ? 'selected' : '' %>>Other</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="address" class="form-label">Address</label>
        <input type="text" class="form-control" id="address" name="address"
               value="<%= formData ? formData.address : '' %>" required>
      </div>

      <div class="mb-3">
        <label for="contact" class="form-label">Contact</label>
        <input type="text" class="form-control" id="contact" name="contact"
               value="<%= formData ? formData.contact : '' %>" required>
      </div>

      <div class="mb-4">
        <label for="next_of_kin" class="form-label">Next of Kin</label>
        <input type="text" class="form-control" id="next_of_kin" name="next_of_kin"
               value="<%= formData ? formData.next_of_kin : '' %>" required>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-primary">Add Patient</button>
      </div>

    </form>
  </div>
</body>
</html>
