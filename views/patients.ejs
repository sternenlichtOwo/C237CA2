<!-- patients.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Disable Person</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Disable Person</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <% if (user.role === "admin") { %>
                <li class="nav-item">
                  <a class="nav-link" href="/patients">Patients</a>
                </li> 
                <li class="nav-item">
                  <a class="nav-link" href="/addPatient">Add new Patient</a>
                </li> 
              <% } %>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>

    <div class="container">
      <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
      <br>
      <div class="text-center"><h2>Disabled People List</h2></div>
      <br>
        <% if (disabledPeople && disabledPeople.length > 0) { %>
            <ul class="list-group">
                <% disabledPeople.forEach(function(person) { %>
                    <li class="list-group-item">
                        <p><b>Name:</b> <%= person.full_name %></p>
                        <p><b>Date of Birth:</b> <%= person.date_of_birth %></p>
                        <p><b>Gender:</b> <%= person.gender %></p>
                        <p><b>Address:</b> <%= person.address %></p>
                        <p><b>Contact:</b> <%= person.contact %></p>
                        <p><b>Next of Kin:</b> <%= person.next_of_kin %></p>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No disabled people found.</p>
        <% } %>
            </div>
        <% if (user.role === "admin") { %>
          <a href ="/patients">Back</a>
        <% } %>
    </div>
    
</body>
</html>
